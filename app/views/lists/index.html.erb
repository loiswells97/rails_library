<%= link_to("< Back to library 📚", books_path, :class => 'back_button')%>

<h1>Book Lists 📜</h1>

<%= link_to("📝 Add a new list", new_list_path, :class => 'action new')%>

<table>
  <tr>
    <th>Title</th>
    <th>Number of books</th>
    <th>Actions</th>
  </tr>
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.books.length() %></td>
      <td>
        <%= link_to("🔍", list_path(list), :class => 'action show')%>
        <%= link_to("✏️", edit_list_path(list), :class => 'action edit')%>
        <%= link_to("🗑", delete_list_path(list), :class => 'action delete')%>
      </td>
    </tr>
  <% end %>
</table>
