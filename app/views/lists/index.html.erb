<%= link_to("< Back to library 📚", books_path, :class => 'back_button')%>

<h1>Book Lists 📜</h1>

<%= link_to("📝 Add a new list", new_list_path, :class => 'action new')%>

<table>
  <tr>
    <th>Title</th>
    <th>Number of books</th>
    <th>Actions</th>
  </tr>
  <tr>
      <td>In progress 🔄</td>
      <td><%= @current_count %></td>
      <td>
        <%= link_to("🔍", current_lists_path, :class => 'action show')%>
      </td>
    </tr>
    <tr>
      <td>Recent reads 🗓📚✅</td>
      <td><%= @recent_count %></td>
      <td>
        <%= link_to("🔍", recent_lists_path, :class => 'action show')%>
        <%= link_to("⚙️", '/settings', :class => 'action edit')%>
      </td>
    </tr>
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.books.length() %></td>
      <td>
        <%= link_to("🔍", list_path(list), :class => 'action show')%>
        <%= link_to("✏️", edit_list_path(list), :class => 'action edit')%>
        <% if !list.is_default%>
          <%= link_to("🗑", delete_list_path(list), :class => 'action delete')%>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
